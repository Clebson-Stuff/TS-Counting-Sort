{
    "compilerOptions": {
      "lib": ["ES6"],
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": [
        "node",
        "jest"
      ]
    },
    "include": [
      "server/**/*.ts",
      "server/*.ts",
      "server/*.json",
      "server/**/*.json",
